#!name=生日提醒助手
#!desc=支持公历/农历生日提醒，可自定义提前天数。
#!author=〈ザㄩメ火华 & Gemini
#!icon=cake.fill
#!date=2025-12-02

[Argument]
cron_exp = input, "0 9 * * *", tag=运行时间, desc=Cron 表达式
advance_days = input, "3", tag=提前天数, desc=填写数字 (例如 3)
birthday_data = input, "老婆@1@10-13;妈妈@0@05-20", tag=生日列表, desc=格式: 名字@类型@日期，多人用分号";"隔开

[Script]
cron {cron_exp} script-path=birthday.js, tag=生日提醒, argument=info="{birthday_data}"&advance={advance_days}
